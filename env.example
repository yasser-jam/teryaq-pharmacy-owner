# Database Configuration (using existing backend database)
POSTGRES_DB=teryaq
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
DATABASE_URL=postgresql://postgres:password@teryaq-db:5432/teryaq

# Backend API Configuration
NEXT_PUBLIC_API_URL=http://teryaq-backend:3000
API_URL=http://teryaq-backend:3000
API_BASE_URL=http://teryaq-backend:3000/api

# Next.js Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here

# Application Settings
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1

# Email Configuration (if using email features)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Security
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# External APIs (if any)
EXTERNAL_API_KEY=your_external_api_key_here

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log
